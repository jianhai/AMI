postinstall scriptlet (using /bin/sh):
/sbin/install-info /usr/share/info/libidn.info.gz /usr/share/info/dir
/sbin/ldconfig
preuninstall scriptlet (using /bin/sh):
if [ $1 = 0 ]; then
    /sbin/install-info --delete /usr/share/info/libidn.info.gz /usr/share/info/dir || :
fi
postuninstall program: /sbin/ldconfig
