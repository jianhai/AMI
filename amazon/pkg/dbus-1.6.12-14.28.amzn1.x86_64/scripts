preinstall scriptlet (using /bin/sh):
# Add the "dbus" user and group
/usr/sbin/groupadd -r -g 81 dbus 2>/dev/null || :
/usr/sbin/useradd -c 'System message bus' -u 81 -g 81 \
	-s /sbin/nologin -r -d '/' dbus 2> /dev/null || :
postinstall scriptlet (using /bin/sh):
/sbin/chkconfig --add messagebus > /dev/null 2>&1 || :
/sbin/chkconfig messagebus resetpriorities > /dev/null 2>&1 || :
preuninstall scriptlet (using /bin/sh):
if [ $1 = 0 ]; then
    /sbin/service messagebus stop > /dev/null 2>&1 || :
    /sbin/chkconfig --del messagebus > /dev/null 2>&1 || :
fi
postuninstall scriptlet (using /bin/sh):
if [ $1 -ge 1 ] ; then
   /sbin/service messagebus condrestart >/dev/null 2>&1 || :
fi
exit 0
