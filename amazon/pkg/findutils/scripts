postinstall scriptlet (using /bin/sh):
if [ -f /usr/share/info/find.info.gz ]; then
    /sbin/install-info /usr/share/info/find.info.gz /usr/share/info/dir || :
fi
preuninstall scriptlet (using /bin/sh):
if [ $1 = 0 ]; then
    if [ -f /usr/share/info/find.info.gz ]; then
        /sbin/install-info --delete /usr/share/info/find.info.gz /usr/share/info/dir \
            || :
    fi
fi
