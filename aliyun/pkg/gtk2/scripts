postinstall scriptlet (using /bin/sh):
/sbin/ldconfig
/usr/bin/update-gdk-pixbuf-loaders x86_64-koji-linux-gnu
/usr/bin/update-gtk-immodules x86_64-koji-linux-gnu
postuninstall scriptlet (using /bin/sh):
/sbin/ldconfig
if [ $1 -gt 0 ]; then
  /usr/bin/update-gdk-pixbuf-loaders x86_64-koji-linux-gnu
  /usr/bin/update-gtk-immodules x86_64-koji-linux-gnu
fi
