postinstall scriptlet (using /bin/sh):
if [ -f /usr/share/info/flex.info.gz ]; then # for --excludedocs
   /sbin/install-info /usr/share/info/flex.info.gz --dir-file=/usr/share/info/dir ||:
fi
preuninstall scriptlet (using /bin/sh):
if [ $1 = 0 ]; then
    if [ -f /usr/share/info/flex.info.gz ]; then # for --excludedocs
	/sbin/install-info --delete /usr/share/info/flex.info.gz /usr/share/info/dir ||:
    fi
fi
