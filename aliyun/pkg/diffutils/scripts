postinstall scriptlet (using /bin/sh):
if [ -f /usr/share/info/diff.info.gz ]; then
  /sbin/install-info /usr/share/info/diff.info.gz /usr/share/info/dir --entry="* diff: (diff).                 The GNU diff."
fi
exit 0
preuninstall scriptlet (using /bin/sh):
if [ $1 = 0 ]; then
    /sbin/install-info --delete /usr/share/info/diff.info.gz /usr/share/info/dir --entry="* diff: (diff).                 The GNU diff."
fi
exit 0
