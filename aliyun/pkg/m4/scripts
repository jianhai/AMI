postinstall scriptlet (using /bin/sh):
if [ -f /usr/share/info/m4.info ]; then # --excludedocs?
    /sbin/install-info /usr/share/info/m4.info /usr/share/info/dir || :
fi
preuninstall scriptlet (using /bin/sh):
if [ "$1" = 0 ]; then
    if [ -f /usr/share/info/m4.info ]; then # --excludedocs?
        /sbin/install-info --delete /usr/share/info/m4.info /usr/share/info/dir || :
    fi
fi
